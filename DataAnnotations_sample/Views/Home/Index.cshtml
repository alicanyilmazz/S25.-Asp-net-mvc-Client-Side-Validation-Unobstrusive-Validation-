@model DataAnnotations_sample.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*BU gördüğün css kodlarını style tagi arasındaki gör diye burada yazdım normalde Site.css içerine yaz sonrada projeye Site.css ekle yoksada sen oluştur içine yaz sonra Layout a ekle linkini düzenli kod yaz.*@
    <style>
        .validation-summary ul {
            list-style-type: lower-latin;
        }

        .input-validation-error {
            border-color: red;
        }

        .field-validation-error {
            background-color: none;
            color: deeppink;
        }

        .form-control {
            color: cadetblue;
        }

        .control-label {
            color: tomato;
        }

        .xxx {
            color: palevioletred;
        }

            .xxx:hover {
                border-color: deeppink;
                background-color: lightpink;
                color: white;
            }
    </style>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
